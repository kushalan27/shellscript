#!/bin/bash
if [ $1 -eq 5 ]
then
echo "$1 is 5"
else
echo "$1 is not 5"
fi

#!/bin/bash
if [ $1 -gt $2 ]
then
echo "$1 is big"
else
echo "$2 is big"
fi

:#!/bin/bash
if [ $1 -gt $2 ] && [ $1 -gt $3 ]
then
echo "print $1 is big"
elif [ $2 -gt $1 ] && [ $2 -gt $3 ]
then
echo "print $2 is big"
else
echo "print $3 is big"
fi

#!/bin/bash
if [ $# -ne 2 ]
then
echo "Enter only two arguments"
exit
fi
sum1=`expr $1 + $2`
sum2=`expr $1 \* $2`
sum3=`expr $1 - $2`
if [ $1 -gt $2 ]
then
sum4=`expr $1 / $2`
else
sum4=`expr $2 / $1`
fi
echo "sum of two numbers is :$sum1"
echo "multi of two numbers is :$sum2"
echo "subtraction of two numbers is :$sum3"

echo "divison of two numbers is :$sum4"
#!/bin/bash
num="2 4 6 8 10"
add=0
for i in $num
do
add=`expr $i+$add`
done
echo "Sum of given $num is $add"

#!/bin/bash
echo "enter the name to check"
read name
if [ -f $name ]
then
echo "$name is a file"
elif [ -d $name ]
then
echo "$name is a directory"
else
echo "$name not exist"
fi
#!/bin/bash
echo "read the name of file"
read name
if [ -f $name ]
then
echo "the given name is a file and the content of the file is:"
cat $name
echo "count the total number of lines in a file"
wc -l $name
elif [ -d $name ]
then
echo "list of files"
find $name -type f
else
echo "$name does not exist"
fi
:
#!/bin/bash
echo "enter the number"
read num
fact=1
while [ $num -gt 1 ]
do
fact=$((fact * num))

num=$((num - 1))
done
echo factorial=$fact
~
